<section class="vh-100 blog">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col col-xl-10">
                <div class="card login-card">
                    <div class="card-body p-4 p-lg-5 text-black">
                        <form class="signup-form">
                            <h5 class="fw-normal mb-3 pb-3">Sign Up</h5>
                            <div class="form-outline mb-4">
                                <input type="user-name" id="user-name-signup" class="form-control form-control-lg" />
                                <label class="form-label" for="user-name-signup">User Name</label>
                            </div>
                            <div class="form-outline mb-4">
                                <input type="password" id="password-signup" class="form-control form-control-lg" />
                                <label class="form-label" for="password-signup">Password</label>
                            </div>
                            <div class="pt-1 mb-4">
                                <button class="btn btn-dark btn-lg btn-block" type="submit">Sign Up</button>
                                <button class="btn btn-dark btn-lg btn-block" type="button" onclick="window.location.href='/login';">Already have an account? Login!</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="/js/signup.js"></script>